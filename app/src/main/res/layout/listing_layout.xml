<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/Search"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Image view for displaying our book image-->
    <ImageView
        android:id="@+id/idIVbook"
        android:layout_width="130dp"
        android:layout_height="154dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/default_book"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:background="#FFE4D6">

        <!--Text view for displaying book publisher-->
        <TextView
            android:id="@+id/BookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Book Title: "
            android:textColor="#7D7D7D"
            android:textSize="15sp" />

        <!--text view for displaying number of pages of book-->
        <TextView
            android:id="@+id/Author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="Author: "
            android:textColor="#7D7D7D"
            android:textSize="15sp" />

        <!--text view for displaying book publish date-->
        <TextView
            android:id="@+id/Isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="ISBN:"
            android:textColor="#7D7D7D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="Price:"
            android:textColor="#7D7D7D"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>